<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="20dp"
    android:layout_marginBottom="10dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />


    <TextView
        android:id="@+id/textView25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="채용부문 정보"
        android:layout_marginBottom="5dp"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"

        android:stretchColumns="*"
        android:shrinkColumns="0"
        >
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border">


            <TextView
                android:id="@+id/textView_searched_부문명"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@drawable/border"
                android:text="부문명" />

            <TextView
                android:id="@+id/textView_searched_department_부문명"
                android:layout_margin="1dp"
                android:gravity="left"/>


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border">


            <TextView
                android:id="@+id/textView_searched_담당업무"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@drawable/border"
                android:text="담당업무" />

            <TextView
                android:id="@+id/textView_searched_department_담당업무"
                android:layout_margin="1dp"
                android:gravity="left" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border">

            <TextView
                android:id="@+id/textView_searched_학력"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@drawable/border"
                android:text="학력" />

            <TextView
                android:id="@+id/textView_searched_department_학력"
                android:layout_margin="1dp"
                android:gravity="left"/>


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border">

            <TextView
                android:id="@+id/textView_searched_경력"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@drawable/border"
                android:text="경력" />

            <TextView
                android:id="@+id/textView_searched_department_경력"
                android:layout_margin="1dp"
                android:gravity="left"/>


        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border">

            <TextView
                android:id="@+id/textView_searched_searched_근무지"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@drawable/border"
                android:text="자격증" />

            <TextView
                android:id="@+id/textView_searched_department_근무지"
                android:layout_margin="1dp"
                android:gravity="left"
                 />

        </TableRow>
</TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">



    <TextView
        android:id="@+id/textView27"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="지원자 평균" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="지원자수" />

            <TextView
                android:id="@+id/textView_지원자수"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="학점" />

            <TextView
                android:id="@+id/textView_평균학점"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="토익" />

            <TextView
                android:id="@+id/textView_평균토익점수"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="자격증" />

            <TextView
                android:id="@+id/textView_평균자격증"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="인턴경험" />

            <TextView
                android:id="@+id/textView_평균인턴경험"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="지원자 통계"
        android:textColor="#000000"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow android:layout_width="match_parent"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="학점" />

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/piechart_학점"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="토익성적" />

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/piechart_토익점수"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="자격증" />

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/piechart_자격증"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="인턴경험" />

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/piechart_인턴경험"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </TableRow>


    </TableLayout>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_searched_department_지원"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:background="@drawable/btn_background"
            android:text="지원" />

        <Button
            android:id="@+id/button_searched_department_이전"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_background"
            android:text="뒤로" />


    </LinearLayout>


</LinearLayout>


