<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="20dp">


    <TextView
        android:id="@+id/textView22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:text="기업 정보"
        android:textSize="30dp"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border">

            <TextView
                android:id="@+id/textView_searched_기업명"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:text="기업명" />

            <TextView
                android:id="@+id/textView_searched_enterprise_기업명"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border">

            <TextView
                android:id="@+id/textView_searched_기업형태"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:text="기업형태" />

            <TextView
                android:id="@+id/textView_searched_enterprise_기업형태"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border">

            <TextView
                android:id="@+id/textView_searched_본사근무지"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:text="본사근무지" />

            <TextView
                android:id="@+id/textView_searched_enterprise_본사근무지"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border">

            <TextView
                android:id="@+id/textView_searched_산업군"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:text="산업군" />

            <TextView
                android:id="@+id/textView_searched_enterprise_산업군"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border">

            <TextView
                android:id="@+id/textView_searched_기업특이사항"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:text="특이사항" />

            <TextView
                android:id="@+id/textView_searched_enterprise_기업특이사항"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border" />

        </TableRow>

    </TableLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <Button
        android:id="@+id/button_지원"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_background"
        android:text="채용부문 조회 및 지원" />

    <Button
        android:id="@+id/button_searched_enterprise_이전"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_background"
        android:text="뒤로" />
    </LinearLayout>

</LinearLayout>